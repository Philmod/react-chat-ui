{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
